<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
</head>

<body>
    <%- include('../includes/admin-navigation.ejs') %>

    <main>
        <form action="/admin/<% if (editing) { %>edit-type<% } else { %>add-type<% } %>" method="POST">
            <div class="form-control">
                <label for="type">Type of car</label>
                <input type="text" name="type" id="type" value="<% if (editing) { %><%= cab.carType %><% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%= cab.imageUrl %><% } %>">
            </div>
            <div class="form-control">
                <label for="price">Cost per KM</label>
                <input type="text" name="price" id="price" value="<% if (editing) { %><%= cab.price %><% } %>">
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= cab.id %>" name="id">
            <% } %>
            <button class="btn" type="submit"><% if (editing) { %>Update Type<% } else { %>Add Type<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>